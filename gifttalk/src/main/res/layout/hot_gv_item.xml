<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/hot_gv_item_iv"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:layout_height="200dp" />
            <TextView
                android:id="@+id/hot_gv_item_tv"
                android:layout_below="@+id/hot_gv_item_iv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="EVE负离子空气净化器移动电源"
                android:textSize="16sp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/hot_gv_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="198.00"
                android:textSize="16sp"
                android:layout_below="@+id/hot_gv_item_tv"
                android:textColor="@android:color/holo_red_light"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/hot_gv_item_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.4k"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                android:layout_below="@+id/hot_gv_item_tv"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                 />
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/ic_small_heart_normal"
                android:layout_below="@+id/hot_gv_item_tv"
                android:layout_toLeftOf="@+id/hot_gv_item_likes"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"/>

        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>